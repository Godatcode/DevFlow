# Environment Configuration
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v1

# Security
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Service Ports
API_GATEWAY_PORT=3000
ORCHESTRATION_PORT=3001
ANALYTICS_PORT=3002
AUTOMATION_PORT=3003
INTEGRATION_PORT=3004

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=devflow
POSTGRES_USER=devflow
POSTGRES_PASSWORD=password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_CONNECTION_TIMEOUT=30000
POSTGRES_IDLE_TIMEOUT=10000

# InfluxDB (Time Series)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=devflow
INFLUXDB_BUCKET=metrics
INFLUXDB_TIMEOUT=10000

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_OFFLINE_QUEUE=true
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_KEY_PREFIX=devflow:

# Apache Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=devflow-client
KAFKA_GROUP_ID=devflow-group
KAFKA_SSL=false
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_INITIAL_RETRY_TIME=100
KAFKA_RETRIES=8

# Kafka Topics
KAFKA_TOPIC_WORKFLOWS=devflow.workflows
KAFKA_TOPIC_ANALYTICS=devflow.analytics
KAFKA_TOPIC_INTEGRATIONS=devflow.integrations
KAFKA_TOPIC_NOTIFICATIONS=devflow.notifications
KAFKA_TOPIC_AUDIT=devflow.audit

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Shutdown
SHUTDOWN_TIMEOUT=10000

# External Service Examples (uncomment and configure as needed)
# GITHUB_BASE_URL=https://api.github.com
# GITHUB_API_KEY=your-github-token
# GITHUB_TIMEOUT=30000
# GITHUB_RETRIES=3
# GITHUB_RATE_LIMIT_MINUTE=60
# GITHUB_RATE_LIMIT_HOUR=5000

# SLACK_BASE_URL=https://slack.com/api
# SLACK_API_KEY=your-slack-token
# SLACK_TIMEOUT=30000
# SLACK_RETRIES=3
# SLACK_RATE_LIMIT_MINUTE=50
# SLACK_RATE_LIMIT_HOUR=1000